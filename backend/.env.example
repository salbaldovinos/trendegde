# TrendEdge Backend Environment Variables
# Copy to .env and fill in your values

# Application
APP_ENV=development
APP_DEBUG=true
APP_VERSION=0.1.0
LOG_LEVEL=DEBUG

# Database (required) - Use port 5432 for local dev, port 6543 for Supavisor in staging/prod
DATABASE_URL=postgresql+asyncpg://trendedge:trendedge_dev@localhost:5432/trendedge
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5

# Redis (required) - Use redis:// for local dev, rediss:// for Upstash TLS in staging/prod
UPSTASH_REDIS_URL=redis://localhost:6379/0

# Supabase (required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Broker APIs (optional)
IBKR_HOST=
IBKR_PORT=4002
TRADOVATE_API_KEY=
TRADOVATE_API_SECRET=

# Monitoring (optional)
SENTRY_DSN=
AXIOM_API_TOKEN=

# Notifications (optional)
TELEGRAM_BOT_TOKEN=

# CORS - Comma-separated origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_DEFAULT=100

# Operator API key for /health/detailed
OPERATOR_API_KEY=your-operator-api-key
