# Docker-specific environment overrides
# These values use Docker-internal hostnames instead of localhost.
# Copy to .env for local Docker development: cp .env.docker .env

# Application
APP_ENV=development
APP_DEBUG=true
APP_VERSION=0.1.0
LOG_LEVEL=DEBUG

# Database — uses Docker service name "postgres"
DATABASE_URL=postgresql+asyncpg://trendedge:trendedge_dev@postgres:5432/trendedge
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5

# Redis — uses Docker service name "redis"
UPSTASH_REDIS_URL=redis://redis:6379/0

# Supabase — fill in your project values
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Broker APIs (optional)
IBKR_HOST=
IBKR_PORT=4002
TRADOVATE_API_KEY=
TRADOVATE_API_SECRET=

# Monitoring (optional)
SENTRY_DSN=
AXIOM_API_TOKEN=

# Notifications (optional)
TELEGRAM_BOT_TOKEN=

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_DEFAULT=100

# Operator API key for /health/detailed
OPERATOR_API_KEY=dev-operator-key
